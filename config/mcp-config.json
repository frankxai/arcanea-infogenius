{
  "mcpServers": {
    "nano-banana": {
      "command": "npx",
      "args": ["@bigcookie/mcp-nano-banana-image"],
      "env": {
        "GEMINI_API_KEY": "your-api-key-here",
        "MODEL": "gemini-3-pro-image",
        "DEFAULT_RESOLUTION": "high"
      },
      "description": "Gemini 3 Pro image generation via Nano Banana MCP"
    }
  },
  "defaults": {
    "model": "gemini-3-pro-image",
    "resolution": "high",
    "guardian": "auto"
  }
}
